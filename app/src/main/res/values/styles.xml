<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="s1_code">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/logincode</item>
    </style>

    <style name="list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dp26</item>
        <item name="android:paddingRight">@dimen/dp26</item>
        <item name="android:layout_marginTop">@dimen/dp10</item>
    </style>

    <style name="ss1">
        <item name="android:padding">@dimen/dp10</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ff007aff</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>
    <!--弹出效果-->
    <style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--对话框显示时从底部进入，关闭时从底部滑出-->
    <style name="BottomDialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/translate_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/translate_dialog_out</item>
    </style>

    <!--对话框显示时从右进入，关闭时从底右退出-->
    <style name="bookrightDialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/book_in_from_right</item>
        <item name="android:windowExitAnimation">@anim/book_out_from_right</item>
    </style>

    <!--dialog弹出XML-->
    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--是否半透明-->
        <item name="android:windowContentOverlay">@null</item><!--是否有覆盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">false</item><!--背景是否模糊显示 true false-->
    </style>

    <style name="appm">
        <item name="android:layout_marginBottom">@dimen/dp10</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Appmm">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">@dimen/dp5</item>
        <item name="android:paddingLeft">@dimen/dp10</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textColor">#B0BDE1</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="appmss">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">@dimen/dp10</item>
        <item name="android:padding">@dimen/dp1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center|left</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="linne">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/dp10</item>
        <item name="android:paddingTop">@dimen/s5</item>
        <item name="android:paddingRight">@dimen/dp10</item>
        <item name="android:paddingBottom">@dimen/s5</item>
    </style>

</resources>