<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <com.cheergotech.widget.Backtitle
        android:id="@+id/backtitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        app:title_name="会议" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line"
        android:layout_below="@+id/backtitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.cheergotech.widget.widgetimage23
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp10"
                app:t23_name1="张萌发起的会议事项"
                app:t23_name2="三年级教师组" />

            <com.cheergotech.widget.widgetimage23
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp10"
                app:t23_name1="会议类型"
                app:t23_name2="年级教师会议"
                app:t23_show2="true" />

            <com.cheergotech.widget.widgetimage23
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp10"
                app:t23_name1="会议主题"
                app:t23_name2="三年级教师组5月份月度工作汇报"
                app:t23_show2="true" />

            <com.cheergotech.widget.widgetimage23
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp10"
                app:t23_name1="会议时间"
                app:t23_name2="2022-05-06 13:00"
                app:t23_show2="true" />

            <com.cheergotech.widget.widgetimage23
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp10"
                app:t23_name1="参会人员(9)"
                app:t23_name2="王梦一、刘军、何媛媛、张雅兰、马冬梅、
查里、亨利、王德发"
                app:t23_show2="true" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@color/white"
        android:padding="@dimen/dp5"
        android:gravity="center"
      >

        <TextView
            android:id="@+id/closest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@mipmap/count1"
            android:drawablePadding="@dimen/dp5"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="取消本次会议"
            android:textColor="#ff000000"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>