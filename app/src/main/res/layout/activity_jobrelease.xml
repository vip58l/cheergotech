<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".UI.activity.joblist.activity_jobrelease">

    <com.cheergotech.widget.Backtitle
        android:id="@+id/backtitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        app:title_name="作业发布" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/backtitle"
        android:padding="@dimen/dp10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/backtitle"
            android:orientation="vertical">

            <com.cheergotech.widget.widgetimage7
                android:id="@+id/widgetimage7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                app:w7_msg1=""
                app:w7_msg2="0/50"
                app:w7_name="作业标题" />

            <EditText
                android:id="@+id/titles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/e12dp"
                android:gravity="left|top"
                android:hint="请输入标题"
                android:maxLength="50"
                android:maxLines="10"
                android:minLines="2"
                android:padding="@dimen/dp10"
                android:textSize="@dimen/sp12" />

            <com.cheergotech.widget.widgetimage7
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                app:w7_msg1=""
                app:w7_msg2="30 /100"
                app:w7_name="作业内容" />

            <EditText
                android:id="@+id/describes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/e12dp"
                android:gravity="left|top"
                android:hint="输入内容"
                android:maxLines="10"
                android:minLines="5"
                android:padding="@dimen/dp10"
                android:textSize="@dimen/sp12" />

            <com.cheergotech.widget.widgetimage7
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                app:w7_msg1="最多上传3个附件，支持图片"
                app:w7_name="上传附件" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp10"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:background="@drawable/item24"
                android:orientation="vertical">


                <ProgressBar
                    android:id="@+id/process"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="1"
                    android:progressDrawable="@drawable/turnout_progressbar_horizontal"
                    android:secondaryProgress="70"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/viecodelinyout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@drawable/item23dp"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingTop="@dimen/dp5"
                    android:paddingRight="@dimen/dp10"
                    android:paddingBottom="@dimen/dp5">

                    <ImageView
                        android:id="@+id/play"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30"
                        android:layout_gravity="center"
                        android:src="@mipmap/play1" />

                    <ImageView
                        android:layout_width="@dimen/dp26"
                        android:layout_height="19dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="11dp"
                        android:src="@mipmap/play2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textColor="#ff929dbb"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0s"
                        android:textColor="#ff929dbb"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp50"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgage"
                        android:layout_width="@dimen/dp60"
                        android:layout_height="@dimen/dp60"
                        android:layout_gravity="center"
                        android:src="@mipmap/sound2" />

                    <TextView
                        android:id="@+id/mtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:text="按住并说话"
                        android:textColor="#ff929dbb"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/send_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/s32"
                android:layout_marginRight="@dimen/s32"
                android:layout_marginBottom="@dimen/dp30"
                android:background="@drawable/it325dp"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="发布作业"
                android:textColor="#ffffffff"
                android:textSize="17sp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.cheergotech.widget.widgetimage14
        android:id="@+id/share"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/e11"
        android:visibility="gone" />


</RelativeLayout>