<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/F8FAFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginBottom="@dimen/s5"
        android:background="@drawable/ite25dp"
        android:orientation="horizontal"
       android:padding="@dimen/dp10">

        <LinearLayout
            android:paddingLeft="@dimen/dp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/s5"
                android:gravity="center"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/headImg"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:src="@mipmap/t1" />

                <TextView
                    android:id="@+id/studentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sp12"
                    android:text="赵欢"
                    android:textColor="#ff202020"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/describes"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginRight="@dimen/sp20"
                    android:text="病假"
                    android:textColor="#ff000000"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/msg2"
                    android:layout_width="52dp"
                    android:layout_height="18dp"
                    android:text="申请时间"
                    android:textColor="#ff929dbb"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/days"
                    android:layout_width="@dimen/dp10"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp4"
                    android:layout_marginRight="@dimen/dp4"
                    android:text="1"
                    android:textColor="#FF9100"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/msg4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天"
                    android:textColor="#ff929dbb"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/s8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/startTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2022-03-31 08:00"
                    android:textColor="#ff929dbb"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/msg6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/sp12"
                    android:layout_marginRight="@dimen/sp12"
                    android:gravity="center"
                    android:text="至"
                    android:textColor="#ff929dbb"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/overTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2022-04-01 08:00"
                    android:textColor="#ff929dbb" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="180"
                android:src="@mipmap/back"></ImageView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>