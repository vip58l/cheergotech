<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.cheergotech.widget.Backtitle
        android:id="@+id/backtitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        app:title_name="会议" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/backtitle"
        android:layout_marginBottom="@dimen/dp10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.cheergotech.widget.widgetimage23
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp10"
                app:t23_name1="张萌发起的会议事项"
                app:t23_name2="三年级教师组" />

            <com.cheergotech.widget.widgetimage23
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp10"
                app:t23_name1="会议类型"
                app:t23_name2="年级教师会议"
                app:t23_show2="true" />

            <com.cheergotech.widget.widgetimage23
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp10"
                app:t23_name1="会议主题"
                app:t23_name2="三年级教师组5月份月度工作汇报"
                app:t23_show2="true" />

            <com.cheergotech.widget.widgetimage23
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp10"
                app:t23_name1="活动地点"
                app:t23_name2="十堰市北京路体育中心 查看详情"
                app:t23_show2="true" />

            <com.cheergotech.widget.widgetimage23
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp10"
                app:t23_name1="会议时间"
                app:t23_name2="2022-05-06 13:00"
                app:t23_show2="true" />

            <com.cheergotech.widget.widgetimage23
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp1"
                app:t23_name1="参会人员(9)"
                app:t23_name2="王梦一、刘军、何媛媛、张雅兰、马冬梅、
查里、亨利、王德发"
                app:t23_show2="true" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>