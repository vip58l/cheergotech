<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp10"
    android:background="@drawable/e11"
    android:orientation="vertical"
    android:padding="@dimen/dp10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp40"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="张萌发起的校外活动事项"
            android:textColor="#ff202020"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/iteme4"
            android:gravity="center"
            android:padding="@dimen/dp5"
            android:text="进行中"
            android:textColor="#ff0077ff"
            android:textSize="14sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5"
        android:text="2022-04-16 07:20"
        android:textColor="#ff929dbb"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:text="活动类型：参加赛事"
        android:textColor="#ff000000"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/datetime2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:text="外出开始时间：2022-06-17 15:00"
        android:textColor="#ff000000"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/datetime3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:text="外出结束时间：2022-06-17 19:00"
        android:textColor="#ff000000"
        android:textSize="13sp" />
</LinearLayout>