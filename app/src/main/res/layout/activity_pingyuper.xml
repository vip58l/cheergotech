<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".UI.activity.Today.activity_pingyu">

    <com.cheergotech.widget.Backtitle
        android:id="@+id/backtitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginBottom="@dimen/dp10"
        app:title_name="评语" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/send1"
        android:layout_below="@+id/backtitle"
        android:layout_marginBottom="@dimen/dp10"
        android:orientation="vertical"
        android:padding="@dimen/dp10">

        <TextView
            android:id="@+id/mtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/backtitle"
            android:lineSpacingExtra="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:text="给x的评语"
            android:textColor="#ff929dbb"
            android:textSize="13sp" />

        <com.cheergotech.widget.widgetimage7
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10"
            app:w7_msg1=""
            app:w7_msg2=""
            android:visibility="gone"
            app:w7_name="评语标题" />

        <EditText
            android:id="@+id/edittitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/e11"
            android:enabled="false"
            android:gravity="left|top"
            android:maxLines="5"
            android:minLines="3"
            android:visibility="gone"
            android:padding="@dimen/dp10" />

        <com.cheergotech.widget.widgetimage7
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp10"
            android:padding="@dimen/dp10"
            app:w7_msg1=""
            app:w7_msg2=""
            app:w7_name="今日表现" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sendchicke1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp50"
                android:layout_weight="1"
                android:background="@drawable/item123"
                android:gravity="center"
                android:text="@string/pingyu3"
                android:textColor="#ff000000"
                android:textSize="15sp" />

            <TextView
                android:layout_width="@dimen/dp20"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/sendchicke2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp50"
                android:layout_weight="1"
                android:background="@drawable/item123"
                android:gravity="center"
                android:text="@string/pingyu4"
                android:textColor="#ff000000"
                android:textSize="15sp" />

        </LinearLayout>

        <com.cheergotech.widget.widgetimage7
            android:id="@+id/widgetimage7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:padding="@dimen/dp10"
            app:w7_msg1=""
            app:w7_msg2=""
            app:w7_name="评语" />

        <EditText
            android:id="@+id/searchpmter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/e11"
            android:enabled="false"
            android:gravity="left|top"
            android:maxLines="10"
            android:minLines="5"
            android:padding="@dimen/dp10" />

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/send1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/s32"
        android:layout_marginRight="@dimen/s32"
        android:layout_marginBottom="@dimen/dp20"
        android:background="@drawable/it325dp"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:text="@string/pingyu5"
        android:textColor="#ffffffff"
        android:textSize="17sp"
        android:textStyle="bold" />

</RelativeLayout>