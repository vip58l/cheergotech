<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp5"
        android:background="@drawable/e8"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp40"
        android:paddingTop="@dimen/s15"
        android:paddingRight="@dimen/dp40"
        android:paddingBottom="@dimen/s15">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="鄂C00001"
                android:textColor="#ff202020"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/s20"
                android:background="@drawable/item6"
                android:paddingLeft="@dimen/dp10"
                android:paddingTop="@dimen/dp2"
                android:paddingRight="@dimen/dp10"
                android:paddingBottom="@dimen/dp2"
                android:text="离我最近"
                android:textColor="#ffffffff"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="距离当前 0.56 千米"
            android:textColor="#ff929dbb"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北广场站 —— 公交四公司"
            android:textColor="#ff000000"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>