<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/F8FAFF"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".UI.activity.toschool.activity_toschool">

    <com.cheergotech.widget.Backtitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_name="到校人数" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:gravity="center">

        <com.cheergotech.widget.widgetimage16
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp30"
            app:w16_name="全部"
            app:w16_visibility="visible" />

        <com.cheergotech.widget.widgetimage16
            android:id="@+id/t2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp30"
            app:w16_name="正常"
            app:w16_visibility="gone" />

        <com.cheergotech.widget.widgetimage16
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp30"
            app:w16_name="迟到"
            app:w16_visibility="gone" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp1"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0"
            android:textColor="#ff0077ff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/t5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/0"
            android:textColor="#ff202020"
            android:textSize="13sp" />

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dp10"
        android:layout_weight="1"
        android:background="@drawable/e4"
        android:padding="@dimen/dp2" />

</LinearLayout>